{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r requirements.txt && npm install",
        "buildCommand": "playwright install --with-deps chromium"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/app.py"
    }
  ],
  "functions": {
    "api/app.py": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "node_modules/@sparticuz/chromium/**"
    }
  }
}
