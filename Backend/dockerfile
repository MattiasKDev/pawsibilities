# Use the official Python image
FROM python:3.10-slim

# Install system dependencies required by Playwright
RUN apt-get update && apt-get install -y \
    wget curl gnupg libatk-bridge2.0-0 libnss3 libnspr4 \
    libvpx6 libicui18n66 libicuuc66 libwoff2dec1 libharfbuzz-icu0 \
    libgstgl-1.0-0 libgstcodecparsers-1.0-0 libjpeg62-turbo \
    libenchant1c2a libsecret-1-0 libhyphen0 libgles2-mesa \
    && rm -rf /var/lib/apt/lists/*

# Install Playwright dependencies
RUN pip install playwright && playwright install-deps && playwright install

# Set the working directory
WORKDIR /app

# Copy application code and requirements.txt to the container
COPY . /app/

# Install Python dependencies from requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Expose port 8080 for the Flask app
EXPOSE 8080

# Run the Flask app using Gunicorn
CMD ["gunicorn", "--worker-tmp-dir", "/dev/shm", "-b", "0.0.0.0:8080", "app:app"]
